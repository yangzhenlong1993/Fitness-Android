<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.JoinActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <fragment
            android:id="@+id/activity_join_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>


        <ScrollView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
               >

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_join_cardview"
                    android:layout_width="403dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="40dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="149dp"
                        tools:layout_editor_absoluteY="210dp">

                        <TextView
                            android:id="@+id/join_event_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="title" />

                        <TextView
                            android:id="@+id/join_event_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="location" />

                        <TextView
                            android:id="@+id/join_event_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="start time" />

                        <TextView
                            android:id="@+id/join_event_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="category" />

                        <TextView
                            android:id="@+id/join_event_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="interval" />

                        <TextView
                            android:id="@+id/join_event_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="count" />

                        <TextView
                            android:id="@+id/join_event_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="Duration" />

                        <Button
                            android:id="@+id/join_confirm_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#f44336"
                            android:text="Join This Event" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>